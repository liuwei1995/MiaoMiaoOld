<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baisebeijintupian"
    tools:context="com.zhaoyao.miaoyin.MainActivity" >

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >


        <EditText
            android:id="@+id/et_video_activity_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_editview"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/tag_search_pressed"
            android:editable="false"
            android:hint="搜索"
            android:textSize="12sp"
            android:padding="4dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_entertainment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/ll" >
    </RelativeLayout>

</RelativeLayout>